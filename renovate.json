{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "docker-compose": {
    "enabled": true,
    "digest": {
      "enabled": false
    }
  },
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "major": {
        "enabled": true
      }
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "getmeili/meilisearch"
      ],
      "enabled": false
    }
  ]
}
